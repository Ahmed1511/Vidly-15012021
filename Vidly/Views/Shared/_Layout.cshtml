<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Vollkorn+SC:wght@700&display=swap" rel="stylesheet">

    <link href="~/Content/css/font-awesome.css" rel="stylesheet" />

    @Styles.Render("~/Content/css")

    @Scripts.Render("~/bundles/modernizr")


</head>
<body>
    @*starting landing Page*@
    <div class="LandingPage">
        <div class="overlay">

            <div class="navbar navbar-inverse navbar-fixed-top" id="headlayout">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        @Html.ActionLink("Vidlly", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                    </div>
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            @if (User.IsInRole("Manager") || User.IsInRole("Admin"))
                            {
                                <li>@Html.ActionLink("Customers", "Index", "customers")</li>
                            }
                            <li>@Html.ActionLink("Movies", "Index", "Movies")</li>
                            <li>@Html.ActionLink("Rental", "Index", "NewRentals")</li>
                            <li>@Html.ActionLink("About", "About", "Home")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                        </ul>
                        @Html.Partial("_LoginPartial")

                    </div>


                </div>

            </div>
            <div class="container body-content">
                @RenderBody()


            </div>

            <footer class="bg-light text-center text-lg-start" id="footer">
                <!-- Copyright -->

                <hr />
                <div class="text-center p-3" style="background-color: orangered;height:80px;position:page;padding:25px">
                    This is Vidlly Rental Store Make Your Fun Online. © 2020 Copyright:
                   

                   
                </div>
                <!-- Copyright -->
            </footer>

        </div>
    </div>

    @* End landing Page*@


    <script src="https://kit.fontawesome.com/yourcode.js"></script>
    @Scripts.Render("~/bundles/lib")
    @RenderSection("scripts", required: false)
</body>
</html>
